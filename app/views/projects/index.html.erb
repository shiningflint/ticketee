<div>
  <h1>Projects!</h1>
  <% admins_only do %>
    <ul>
      <li><%= link_to "New Project", new_admin_project_path, class: "button" %></li>
      <li><%= link_to "Admin", admin_root_path %></li>
    </ul>
  <% end %>

  <div id="projects">
    <% @projects.each do |project| %>
      <h2><%= link_to project.name, project_path(project.id) %></h2>
      <p><%= project.description %></p>
    <% end %>
  </div>
</div>
