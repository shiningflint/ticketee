<div>
  <h1>Projects!</h1>
  <% admins_only do %>
    <%= link_to "New Project", new_admin_project_path, class: "button" %>
  <% end %>

  <div id="projects">
    <% @projects.each do |project| %>
      <h2><%= link_to project.name, project_path(project.id) %></h2>
      <p><%= project.description %></p>
    <% end %>
  </div>
</div>
